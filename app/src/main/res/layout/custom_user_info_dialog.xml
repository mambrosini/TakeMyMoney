<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:divider="@drawable/transparent_divider"
    android:showDividers="middle"
    android:background="@drawable/article_background">
    <LinearLayout
        android:id="@+id/phoneLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/user_info_item_background"
        android:gravity="center"
        android:padding="10dp">
        <ImageView
            android:id="@+id/image"
            android:src="@drawable/ic_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/text"
            android:text="Phone number"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/mailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/user_info_item_background"
        android:gravity="center"
        android:padding="10dp">
        <ImageView
            android:id="@+id/image2"
            android:src="@drawable/ic_mail_outline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/text2"
            android:text="Mail"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/secondaryMailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/user_info_item_background"
        android:gravity="center"
        android:padding="10dp">
        <ImageView
            android:id="@+id/image3"
            android:src="@drawable/ic_mail_outline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/text3"
            android:text="Secondary Mail"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:id="@+id/dismissButton"
        android:layout_gravity="right"
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@android:style/Widget.Holo.Light.Button.Borderless.Small"/>
</LinearLayout>